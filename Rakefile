
require 'rubygems'
gem 'echoe'
require 'echoe'

Echoe.new('facebook_exceptions') do |p|
  p.project = 'fauna'
  p.author = 'Evan Weaver'
  p.summary = 'A Rails plugin for rendering application errors directly within Facebook.'
  p.url = 'http://blog.evanweaver.com/files/doc/fauna/facebook_exceptions/'
  p.docs_host = 'blog.evanweaver.com:~/www/bax/public/files/doc/'
  p.rdoc_pattern = /lib\/facebook_exceptions\.rb|README|CHANGELOG|TODO|LICENSE$/
  p.need_gem = false
  p.need_tar_gz = false
end
